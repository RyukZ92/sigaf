	{
	//Convertir fecha YY-MM-DD a DD-MM-YY.
	$fecha=$lista[$i]['fecha'];
	$fecha_m=explode("-",$fecha);
	$dia_m=$fecha_m[2];
	$mes_m=$fecha_m[1];
	$anio_m=$fecha_m[0];
	$fecha_reg=$dia_m.'-'.$mes_m.'-'.$anio_m;
	$iva=$lista[$i]['precio_neto']*0.12;
	$total= $lista[$i]['precio_neto'];
